html
    head
        meta(charset='UTF-8')
        title=`Pug Server`
        style
             include ./bootstrap.min.css
        link(rel='shortcut icon' href='https://cdn0.iconfinder.com/data/icons/animal-geometric-faces/128/AnimalHeadIcons_14-64.png' type='image/x-icon')
    body.container.mt-5
    form.d-flex.flex-column.justify-content-center(action='/productos' method='post')
        h1.text-center Ingrese producto
        div.form-group
            label.form-label.mt-4(for='inputNombre') Nombre:
            input#inputNombre.form-control(type='text' placeholder='Producto...' name='inputNombre')
            label.form-label.mt-4(for='inputPrecio') Precio:
            input#inputPrecio.form-control(type='number' placeholder='Precio...' name='inputPrecio')
            label.form-label.mt-4(for='inputUrl') Foto URL:
            input#inputUrl.form-control(type='text' placeholder='URL...' name='inputUrl')
        div.mt-4.d-flex.justify-content-evenly
            button.btn.btn-outline-success Enviar
    form(action='/productos' method='get')
        button.btn.btn-outline-success Ver tabla
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js' integrity='sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p' crossorigin='anonymous')