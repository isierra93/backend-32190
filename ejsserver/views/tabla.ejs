<!DOCTYPE html>
<html lang="ES">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Ejs Server</title>
  <link rel="shortcut icon" href="https://cdn4.iconfinder.com/data/icons/wirecons-free-vector-icons/32/code-256.png" type="image/x-icon">
  <link rel="stylesheet" href="bootstrap.min.css">
</head>
<body class="container mt-5">
    <h1 class="text-center">Productos</h1>
    <div class="container mt-2 d-flex justify-content-center ">
        <% if (productos.length > 0){ %>
        <table class="table table-hover">
          <thead>
            <tr>
              <th scope="col">Nombre</th>
              <th scope="col">Precio</th>
              <th scope="col">Foto</th>
            </tr>
          </thead>
          <tbody>
            <% for (const prod of productos) { %>
                <tr class="table-info">
                    <td><%=prod.inputNombre%></td>
                    <td><%=prod.inputPrecio%></td>
                    <td><img src=<%=prod.inputUrl%> alt=""></td>
                  </tr>
        <% } %>
          </tbody>
        </table>
        <% } else { %>
          <div class="container mt-5 d-flex justify-content-center">
            <h1>No hay productos</h1>
          </div>
          <% } %>
    </div>
    <form action="/" method="get">
        <button class="btn btn-outline-success mt-2">
            Cargar productos
        </button>
    </form>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>